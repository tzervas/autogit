# EditorConfig - Universal Editor Configuration
# https://editorconfig.org
#
# This ensures consistent formatting across ALL editors and IDEs.
# Most editors support this natively or via plugin.

root = true

# =============================================================================
# Default settings for all files
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =============================================================================
# Python
# =============================================================================
[*.py]
indent_size = 4
max_line_length = 100

# =============================================================================
# YAML (Docker Compose, CI configs, etc.)
# =============================================================================
[*.{yml,yaml}]
indent_size = 2

# =============================================================================
# JSON
# =============================================================================
[*.json]
indent_size = 2

# =============================================================================
# TOML (pyproject.toml, etc.)
# =============================================================================
[*.toml]
indent_size = 4

# =============================================================================
# Markdown
# =============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# =============================================================================
# Shell Scripts
# =============================================================================
[*.sh]
indent_size = 4
shell_variant = bash

# =============================================================================
# Makefiles (require tabs)
# =============================================================================
[Makefile]
indent_style = tab

# =============================================================================
# Docker
# =============================================================================
[Dockerfile*]
indent_size = 4

# =============================================================================
# Git files
# =============================================================================
[.git*]
indent_size = 4
