---
name: Docker Dev Build and Push

# This workflow builds and pushes Docker images to GHCR for the dev branch
# Images are tagged with 'dev' and SHA for development testing
# Layer caching is enabled to speed up subsequent builds

on:
  push:
    branches:
      - dev
    paths:
      - 'services/**'
      - 'docker-compose.yml'
      - '.github/workflows/docker-dev-build.yml'
  workflow_dispatch:

permissions:
  contents: read
  packages: write

jobs:
  build-and-push-git-server:
    name: Build and Push Git Server (Dev)
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v6

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ghcr.io/${{ github.repository }}/git-server
          tags: |
            type=raw,value=dev
            type=sha,prefix=dev-
            type=raw,value=cache

      - name: Build and push Git Server
        uses: docker/build-push-action@v6
        with:
          context: ./services/git-server
          file: ./services/git-server/Dockerfile
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: |
            type=registry,ref=ghcr.io/${{ github.repository }}/git-server:cache
            type=gha
          cache-to: |
            type=registry,ref=ghcr.io/${{ github.repository }}/git-server:cache,mode=max
            type=gha,mode=max

      - name: Image published
        run: |
          echo "✅ Published git-server dev image"
          echo "Tags: ${{ steps.meta.outputs.tags }}"

  build-and-push-runner-coordinator:
    name: Build and Push Runner Coordinator (Dev)
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v6

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ghcr.io/${{ github.repository }}/runner-coordinator
          tags: |
            type=raw,value=dev
            type=sha,prefix=dev-
            type=raw,value=cache

      - name: Build and push Runner Coordinator
        uses: docker/build-push-action@v6
        with:
          context: ./services/runner-coordinator
          file: ./services/runner-coordinator/Dockerfile
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: |
            type=registry,ref=ghcr.io/${{ github.repository }}/runner-coordinator:cache
            type=gha
          cache-to: |
            type=registry,ref=ghcr.io/${{ github.repository }}/runner-coordinator:cache,mode=max
            type=gha,mode=max

      - name: Image published
        run: |
          echo "✅ Published runner-coordinator dev image"
          echo "Tags: ${{ steps.meta.outputs.tags }}"
